@using Microsoft.AspNetCore.Mvc.TagHelpers
@using VoiceStudio.Identity.Models
@model IEnumerable<UserForUpdate>

@if (Model.Any())
{
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Список аккаунтов</h1>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Имя</th>
                <th>Электронная почта</th>
                <th>Телефон</th>
                <th>Действия</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Telephone)
                    </td>
                    <td class="align-middle">

                        <a class="btn btn-outline-primary" asp-action="Edit"
                           asp-route-id="@item.Id">
                            <i class="bi bi-pencil-square"></i>| Обновить |
                        </a>
                        <a class="btn btn-danger text-white" asp-action="Delete"
                           asp-route-id="@item.Id">
                            <i class="bi bi-trash"></i>Удалить
                        </a>

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <p class="text-muted text-center my-5">Извините,аккаунты не найдены</p>
}